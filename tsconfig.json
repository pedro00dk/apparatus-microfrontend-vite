{
    "include": ["src"],
    "exclude": ["**/*.test.*"],
    "compilerOptions": {
        "erasableSyntaxOnly": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "declaration": true,
        "declarationDir": "./dist/",
        "emitDeclarationOnly": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "esnext",
        "types": ["vite/client"]
    }
}
